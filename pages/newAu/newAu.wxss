/* pages/newAu/newAu.wxss */
.wrapper {
  padding: 0 40rpx;
}
.mu_box {
  width: 100%;
  height: 300rpx;
  border: 1px solid rgba(192, 192, 192);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color:rgba(192, 192, 192, 0.1);
  box-shadow: 20rpx 20rpx 100rpx #888888 inset;
  /* background-image: linear-gradient(to right, red,orange,yellow,green,blue,indigo,violet); */
  padding: 20rpx 0;
}
.mu_info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.mu_imagediv {
  flex: 4;
  text-align: center;
}
.mu_image {
  width: 150rpx;
  height: 150rpx;
}
.mu_timeshow {
  flex: 8;
}
.mu_sliderbox {
  padding: 0 40rpx;
  color: #FFF;
}